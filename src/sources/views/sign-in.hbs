<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h4 class="mb-0">Đăng nhập</h4>
          <div class="text-bg-danger text-center my-3">{{err}}</div>
        </div>
        <div class="card-body">
          <form class="form" role="form" autocomplete="off" action="/user/check-account" method="post">
            <div class="form-group">
              <label for="username">Tài khoản</label>
              <input type="text" class="form-control form-control-lg rounded-0" name="username" id="username"
                value="{{username}}" required>
            </div>
            <div class="form-group">
              <label>Mật khẩu</label>
              <input type="password" class="form-control form-control-lg rounded-0" name="password" id="password"
                value="{{password}}" required>
            </div>
            <div class="custom-control custom-checkbox m-2">
              <input type="checkbox" class="custom-control-input" id="remember">
              <label class="custom-control-label" for="remember">Nhớ tài khoản</label>
            </div>
            <button type="submit" class="mt-2 btn btn-success btn-lg float-right ">Đăng nhập</button>
          </form>
        </div>
        <div class="card-footer">
          <div class="d-flex justify-content-center">
            <a href="forgot-password" class="btn btn-link" data-toggle="modal" data-target="#forgotPasswordModal">Quên
              mật khẩu?</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>